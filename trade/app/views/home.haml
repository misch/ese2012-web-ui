#content
  .left.column
    %h1 Welcome to our trade mark application!

    %h2 Here are all available items
    - for user in users
      - for active_item in user.list_active_items
        %li
          #{active_item.to_s}
          %a{:href => active_item.owner.name} Go to #{active_item.owner.name}
          %form(action="/buy" method="POST" )
            %input(type = 'hidden' name = 'item'){ :value => active_item.name }
            %input(type = 'hidden' name = 'seller'){ :value => user.name }
            %input(type = 'submit' value = 'Buy')
